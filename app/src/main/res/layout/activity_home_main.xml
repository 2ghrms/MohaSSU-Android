<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:name="com.naver.maps.map.MapFragment" />

    <ImageButton
        android:id="@+id/btnNotification"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_button_background"
        android:src="@drawable/ic_notification"
        android:padding="5dp"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnSchedule"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="3dp"
        android:background="@drawable/rounded_button_background"
        android:src="@drawable/ic_noti"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/btnNotification"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnFriendList"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="3dp"
        android:background="@drawable/rounded_button_background"
        android:src="@drawable/ic_friends"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnSchedule"
        app:layout_constraintStart_toStartOf="@id/btnSchedule" />

    <ImageButton
        android:id="@+id/btnNowLocation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/rounded_button_background"
        android:src="@drawable/ic_current_location"
        android:elevation="8dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/btnAddPin"
        app:layout_constraintStart_toStartOf="@id/btnAddPin"
        app:layout_constraintEnd_toEndOf="@id/btnAddPin"/>

    <ImageButton
        android:id="@+id/btnAddPin"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="3dp"
        android:background="@drawable/rounded_button_background"
        android:src="@drawable/ic_add_location"
        android:elevation="8dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnMyPage"
        app:layout_constraintStart_toStartOf="@id/btnMyPage" />

    <ImageButton
        android:id="@+id/btnMyPage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="3dp"
        android:background="@drawable/rounded_button_background"
        android:src="@drawable/ic_mypage"
        android:elevation="8dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/currentLocation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/my_icon"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/friendLocation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/friend_icon"
        android:elevation="8dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="@+id/currentLocation"
        app:layout_constraintStart_toStartOf="@+id/currentLocation" />



</androidx.constraintlayout.widget.ConstraintLayout>