<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 지도 영역 -->
    <ImageView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/map"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/currentLocation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/my_icon"
        android:elevation="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/speechBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태 메시지를 남겨주세요"
        android:textSize="16sp"
        android:textColor="#555555"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/currentLocation"
        app:layout_constraintStart_toStartOf="@id/currentLocation"
        app:layout_constraintEnd_toEndOf="@id/currentLocation"
        android:background="@drawable/speech_bubble_background"
        android:gravity="center" />

    <!-- 상단 상태 정보 -->

    <LinearLayout
        android:id="@+id/statusInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bannerimage"
        android:padding="8dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 장소 정보 -->
        <TextView
            android:id="@+id/placeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한경직기념관에서 채플 수업 중..."
            android:textSize="16sp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"/>

        <!-- 시간 정보 -->
        <TextView
            android:id="@+id/timeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00 부터 15:50 까지"
            android:textSize="14sp"
            android:textColor="#4682B4"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iosMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ios_menu_button_background"
        android:padding="12dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/currentLocation">
        <!-- 아이콘 -->
        <ImageView
            android:id="@+id/buttonIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/buttonios" />

        <!-- 텍스트 -->
        <TextView
            android:id="@+id/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 이름"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>