<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 텍스트 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="준혁핑님 반갑습니다"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4682B4"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="@id/titleText"
        android:layout_marginTop="15dp" />

    <!-- 프로필 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TableRow>
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_icon"
                android:layout_gravity="top" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="준혁핑"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp" />

                <ImageView
                    android:id="@+id/profileEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_edit"
                    android:layout_marginStart="140dp" />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc123"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />
        </TableRow>
        <TableRow>
                <TextView
                    android:id="@+id/textRealName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/userRealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배준혁"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />
        </TableRow>
            <TableRow>
            <TextView
                    android:id="@+id/textBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/userBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2002.01.01"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <!-- 버튼: 나의 시간표 -->
    <ImageButton
        android:id="@+id/scheduleButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/mytime"
        android:scaleType="centerInside"
        android:background="@drawable/button_style"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- 버튼: 알림 설정 -->
    <ImageButton
        android:id="@+id/notificationButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/alarmset"
        android:scaleType="centerInside"
        android:background="@drawable/button_style"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 로그아웃 텍스트 -->
    <TextView
        android:id="@+id/logoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>