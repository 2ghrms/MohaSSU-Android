<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 둥근 직사각형 (배경) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 배경 색상 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 삼각형 (아래쪽 화살표) -->
    <item android:bottom="-10dp" android:left="50dp">
        <shape>
            <path android:pathData="M 0 0 L 20 0 L 10 20 Z" /> <!-- 삼각형 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>